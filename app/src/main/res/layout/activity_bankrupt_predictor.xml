<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.BankruptPredictorActivity"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:background="@drawable/gradient3"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            xmlns:card_view ="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardBackgroundColor="#CCFFFFFF"
            card_view:cardCornerRadius="18dp"
            android:alpha=".99"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Industrial Risk"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    />
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="3"
                    android:layout_gravity="center_horizontal"
                    android:stepSize="1"
                    android:progressTint="#EB3434"
                    android:id="@+id/industrial_risk"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            xmlns:card_view ="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardBackgroundColor="#CCFFFFFF"
            card_view:cardCornerRadius="18dp"
            android:alpha=".99"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Management Risk"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    />
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="3"
                    android:layout_gravity="center_horizontal"
                    android:stepSize="1"
                    android:progressTint="#EB3434"
                    android:id="@+id/management_risk"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            xmlns:card_view ="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardBackgroundColor="#CCFFFFFF"
            card_view:cardCornerRadius="18dp"
            android:alpha=".99"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Financial Flexibility"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    />
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="3"
                    android:layout_gravity="center_horizontal"
                    android:stepSize="1"
                    android:progressTint="#EB3434"
                    android:id="@+id/financial_risk"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            xmlns:card_view ="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardBackgroundColor="#CCFFFFFF"
            card_view:cardCornerRadius="18dp"
            android:alpha=".99"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credibility"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    />
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="3"
                    android:layout_gravity="center_horizontal"
                    android:stepSize="1"
                    android:progressTint="#EB3434"
                    android:id="@+id/credibility_risk"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            xmlns:card_view ="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardBackgroundColor="#CCFFFFFF"
            card_view:cardCornerRadius="18dp"
            android:alpha=".99"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compitetiveness"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    />
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="3"
                    android:layout_gravity="center_horizontal"
                    android:stepSize="1"
                    android:progressTint="#EB3434"
                    android:id="@+id/competitive_risk"
                    />
            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            xmlns:card_view ="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
            card_view:cardBackgroundColor="#CCFFFFFF"
            card_view:cardCornerRadius="18dp"
            android:alpha=".99"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Operating Risk"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    />
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="3"
                    android:layout_gravity="center_horizontal"
                    android:stepSize="1"
                    android:progressTint="#EB3434"
                    android:id="@+id/operating_risk"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/activity_bankrupt_predict_cardview"
            xmlns:card_view ="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="10dp"
            card_view:cardBackgroundColor="#CCFFFFFF"
            card_view:cardCornerRadius="20dp"
            android:alpha=".99"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Predict"
                android:textSize="20dp"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>